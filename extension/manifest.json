{
  "manifest_version": 3,
  "name": "Lambda",
  "description": "Lambda - personal Chrome tweaks and utilities.",
  "version": "0.1",
  "permissions": [
    "activeTab",
    "contextMenus",
    "downloads",
    "downloads.shelf",
    "history",
    "power",
    "sessions",
    "storage",
    "tabs",
    "notifications",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content/bypass-cs.js", "js/content/image-probe.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "offline_enabled": true,
  "action": {
    "default_title": "Lambda",
    "default_popup": "popup.html",
    "default_icon": "img/icon/lambda-512.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "commands": {
    "save-loaded-image": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Easily save the image currently loaded in the browser (if you are at a URL like http://site.com/images/foobar.jpg)"
    }
  },
  "icons": {
    "16": "img/icon/lambda-16.png",
    "32": "img/icon/lambda-32.png",
    "64": "img/icon/lambda-64.png",
    "128": "img/icon/lambda-128.png",
    "256": "img/icon/lambda-256.png",
    "512": "img/icon/lambda-512.png"
  }
}
